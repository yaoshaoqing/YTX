<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/index</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus"> true </item>
    </style>
    <!--列表样式不包含title-->
    <style name="ListTextSize" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">@dimen/x150</item>
        <item name="android:lineSpacingExtra">@dimen/y1</item>
    </style>
    <!--列表标题样式-->
    <style name="ListTitle">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">@dimen/x2</item>
        <item name="android:textSize">@dimen/y12</item>
        <item name="android:lineSpacingExtra">@dimen/y1</item>
    </style>
    <!--列表图片样式-->
    <style name="ListImg">
        <item name="android:layout_height">@dimen/y17</item>
        <item name="android:layout_width">@dimen/x14</item>
    </style>
    <!--登录、注册、忘记密码按钮样式-->
    <style name="Login_button">
        <item name="android:textSize">19sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">@dimen/x288</item>
        <item name="android:layout_height">@dimen/y32</item>
        <item name="android:layout_marginTop">@dimen/y15</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <!--详情勾选-->
    <style name="detail_gouxuan">
        <item name="android:textSize">13sp</item>>
        <item name="android:textColor">#4cb335</item>
    </style>
    <!--详情勾选图片-->
    <style name="detail_gouxuan_img">
        <item name="android:textSize">13sp</item>>
        <item name="android:textColor">#4cb335</item>
        <item name="android:layout_width">@dimen/x15</item>
        <item name="android:layout_height">@dimen/y15</item>
        <item name="android:src">@drawable/gouxuan</item>
        <item name="android:layout_marginRight">@dimen/x3</item>
    </style>
    <!--价格详情-->
    <style name="detail_price">
        <item name="android:textSize">18sp</item>>
        <item name="android:textColor">#ff5500</item>
    </style>
    <!--详情页日程待批图片-->
    <style name="detail_richengxuanze_img">
        <item name="android:layout_width">@dimen/x16</item>
        <item name="android:layout_height">@dimen/y16</item>
        <item name="android:src">@drawable/richengxuanze</item>
        <item name="android:layout_marginRight">@dimen/x8</item>
    </style>
    <!--详情页报名须知、年龄要求、注意事项、费用说明-->
    <style name="view">
        <item name="android:layout_width">@dimen/x3</item>
        <item name="android:layout_height">@dimen/y12</item>
        <item name="android:layout_marginRight">@dimen/x8</item>
        <item name="android:background">#4cb335</item>
    </style>
    <style name="text">
    <item name="android:layout_width">@dimen/x293</item>
    <item name="android:layout_height">@dimen/y16</item>
    <item name="android:textColor">#4db335</item>
    <item name="android:textSize">16sp</item>>
    </style>
    <!--地址、年龄、出营日期-->
    <style name="address_age">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>>
    </style>
    <!--详情底栏文字-->
    <style name="detail_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/y16</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/y1</item>
        <item name="android:layout_marginBottom">@dimen/y3</item>
    </style>
    <!--详情底栏图片-->
    <style name="detail_bottom_img">
        <item name="android:layout_width">@dimen/x30</item>
        <item name="android:layout_height">@dimen/y26</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginTop">@dimen/y2</item>
    </style>
    <!--确认订单-->
    <style name="firm_order">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:lineSpacingExtra">@dimen/y5</item>
    </style>

    <style name="firm_orderLinearlayout">
        <item name="android:layout_width">@dimen/x295</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/y12</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--下划线-->
    <style name="underline">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.001dp</item>
        <item name="android:background">#999999</item>
    </style>
    <!--支付字体-->
    <style name="fontSize">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <!--联系人字体-->
    <style name="lianxireng_font">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <!--对话框-->
    <style parent="@android:style/Theme.Dialog" name="base_dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <style parent="@android:style/Theme.Dialog" name="personal_Relative">
        <item name="android:layout_height">@dimen/y38</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="personal_Relative_first_img">
        <item name="android:layout_height">@dimen/y18</item>
        <item name="android:layout_width">@dimen/x35</item>
        <item name="android:layout_marginRight">@dimen/x9</item>
    </style>
    <style name="personal_Relative_end_img">
        <item name="android:layout_height">@dimen/y15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
