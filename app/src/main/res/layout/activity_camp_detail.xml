</ScrollView>
    <!--底栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y37"
        android:orientation="horizontal"
        android:background="@drawable/daohang"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="@dimen/x138"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/zixun"
                >
                <ImageView
                    android:id="@+id/zixun_img"
                    android:src="@drawable/zixun2x"
                    style="@style/detail_bottom_img"
                    />
                <TextView
                    style="@style/detail_bottom"
                    android:id="@+id/zixun_text"
                    android:text="咨询"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/share"
                >
                <ImageView
                    android:id="@+id/share_img"
                    android:src="@drawable/fenxiang"
                    style="@style/detail_bottom_img"
                    />
                <TextView
                    style="@style/detail_bottom"
                    android:id="@+id/share_text"
                    android:text="分享"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/collection"
                >
                <ImageView
                    style="@style/detail_bottom_img"
                    android:id="@+id/collection_img"
                    android:src="@drawable/shoucang"
                    />
                <TextView
                    style="@style/detail_bottom"
                    android:id="@+id/collection_text"
                    android:text="收藏"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/enroll"
            android:background="#ff8800"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即报名"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>
